<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restreq"
    android:id="@+id/relmain"
>

    <TextView
        android:id="@+id/what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:background="#FF00FF00"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/what"
        android:layout_marginLeft="100px"
        android:layout_marginTop="100px"
        android:background="#FF00FFFF"
        android:padding="20px"
    >
        <EditText
            android:id="@+id/rest_search_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            android:background="#FFFF0000"
            android:padding="20px"
        />
        <Button
            android:id="@+id/rest_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"
        />
    </LinearLayout>
    <Button
        android:id="@+id/btn_go_restreq_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400px"
        android:layout_marginLeft="200px"
        android:text="Menu"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rest_recycler_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500px"
        android:layout_marginHorizontal="40px"
        android:padding="30px"
        android:layout_weight="3"
        android:background="@drawable/drawable_one"
    />

</RelativeLayout>