<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rest_recycler_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_two"
    android:layout_margin="20px"
    android:padding="20px"
>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/rest_recycler_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF00AAAA"
                />
            <TextView
                android:id="@+id/rest_recycler_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF00"
                android:layout_marginHorizontal="20px"
                android:paddingHorizontal="10px"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/rest_recycler_textfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</FrameLayout>